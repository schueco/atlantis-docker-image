{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "gitlab>plan.one/infrastructure/renovate-config",
    "gitlab>plan.one/infrastructure/renovate-config:versionFromComment",
    "gitlab>plan.one/infrastructure/renovate-config:gitlabAsCiCommitScope"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchPackagePatterns": [
        ".*terragrunt.*",
        ".*atlantis.*"
      ],
      "extends": [":semanticCommitTypeAll(fix)"]
    }
  ]
}
